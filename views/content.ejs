<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/index.css">
</head>
<body>
  <%- include('navbar') %>
  <div class="cards">
    <% cards.forEach(card => { %>
      <div class="card" style="background-image: url('/<%=card.image %>');">
        <p class="heading"><%= card.title %></p>
        <p><%= card.powered %></p>
        <p><%= card.source %></p>
      </div>
    <% }) %>
  </div>
  <%- include('footer') %>
</body>
</html>